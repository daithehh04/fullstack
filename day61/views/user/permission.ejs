<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>Phân quyền</h1>
    <form action="" method="post">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th width="10%"><input type="checkbox" /></th>
            <th>Role</th>
          </tr>
        </thead>
        <tbody>
          <% roles.forEach(role => { %>
          <tr>
            <td>
              <input type="checkbox" name="role" <%= userRole.find(r => r.id ===
              role.id) ? 'checked' : '' %> value="<%= role.id %>" id="<%=
              role.id %>" />
            </td>
            <td><label for="<%= role.id %>"><%= role.name %></label></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <a href="/users" class="btn btn-danger">Hủy</a>
      <button type="submit" class="btn btn-success">Lưu</button>
    </form>
  </body>
</html>
