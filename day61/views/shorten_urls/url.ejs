<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css"
      integrity="sha512-b2QcS5SsA8tZodcDtGRELiGv5SaKSk1vDHDaQRda0htPYWZ6046lr3kJ5bAAQdpV2mmA/4v0wQF9MyU6/pDIAg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <script src="https://cdn.rawgit.com/davidshimjs/qrcodejs/gh-pages/qrcode.min.js"></script>
    <title>Document</title>
    <style>
      .wrapper {
        position: relative;
        width: 100%;
        height: 100vh;
      }
      .img-container {
        display: none;
        place-items: center;
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.4);
      }
      .img-container.active {
        display: grid;
      }
      .img-container .img {
        width: 400px;
      }
      .img-container .text {
        padding: 10px;
        padding-left: 20px;
        padding-bottom: 0;
        margin: 0;
      }
      .img-container .row-header {
        background-color: #fff;
        display: flex;
        align-items: center;
        justify-content: space-between;
      }
      .row-header .close {
        cursor: pointer;
        padding: 8px;
        padding-right: 20px;
        font-weight: 600;
      }
    </style>
  </head>
  <body>
    <div class="wrapper">
      <div class="mx-auto" style="width: 500px; padding-top: 70px">
        <div style="width: 100%">
          <a
            href="<%= url %>"
            style="width: 100%; margin-bottom: 12px"
            class="btn btn-primary"
            >Nhấn vào đây để tiếp tục</a
          >
        </div>
        <div style="width: 100%">
          <a
            href="https://www.facebook.com/sharer/sharer.php?u=<%= url %>"
            target="_blank"
            style="width: 100%; margin-bottom: 12px"
            class="btn btn-outline-primary"
            >Chia sẻ lên facebook</a
          >
        </div>
        <div style="width: 100%">
          <button
            id="qrcode"
            style="width: 100%; margin-bottom: 12px"
            class="btn btn-outline-primary btn-QR"
          >
            Gửi tới điện thoại (QR code)
          </button>
        </div>
        <div style="width: 100%">
          <a
            href="/shorten-urls"
            style="width: 100%; margin-bottom: 12px"
            class="btn btn-outline-primary"
            >Rút gọn liên kết mới</a
          >
        </div>
      </div>
      <div class="img-container">
        <div>
          <div class="row-header">
            <p class="text">Quét mã QR này từ điện thoại của bạn</p>
            <span class="close">X</span>
          </div>
          <img class="img" src="<%= urlImg %>" alt="" />
        </div>
      </div>
    </div>
  </body>
  <script>
    const imgContainer = document.querySelector(".img-container")
    const btnQR = document.querySelector(".btn-QR")
    const btnX = document.querySelector(".img-container .close")
    btnQR.addEventListener("click", () => {
      imgContainer.classList.add("active")
    })
    btnX.addEventListener("click", () => {
      imgContainer.classList.remove("active")
    })
  </script>
</html>
